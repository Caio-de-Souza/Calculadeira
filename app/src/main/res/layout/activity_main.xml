<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aandroid="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#80FFFFFF"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/inputValue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:focusable="false"
            android:gravity="end|bottom"
            android:lines="1"
            android:maxLines="1"
            android:textSize="70sp" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollResult"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="1">

            <TextView
                android:id="@+id/displayTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:scrollHorizontally="true"
                android:layout_gravity="end|bottom"
                android:maxLines="1"
                android:textSize="70sp"/>
        </HorizontalScrollView>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="5">

        <Button
            android:id="@+id/btnAC"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/green_rounded_button"
            android:onClick="onClearClick"
            android:text="AC"
            android:textColor="@color/green_ac_text"
            android:textSize="25sp"
            app:backgroundTint="@null" />

        <ImageButton
            android:id="@+id/btnParentheses"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/math_symbol_rounded_button"
            android:src="@drawable/ic_parentheses"
            android:tag="("/>

        <ImageButton
            android:id="@+id/btnPercent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/math_symbol_rounded_button"
            android:src="@drawable/ic_percent"
            android:tag="%"/>

        <ImageButton
            android:id="@+id/btnDivision"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/math_symbol_rounded_button"
            android:src="@drawable/ic_division"
            android:tag="/"/>

        <Button
            android:id="@+id/btnSeven"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/number_rounded_button"
            android:text="7"
            android:textColor="@color/numbers_button_text_color"
            android:textSize="25sp"
            app:backgroundTint="@null"
            android:tag="7"/>

        <Button
            android:id="@+id/btnEight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/number_rounded_button"
            android:text="8"
            android:textColor="@color/numbers_button_text_color"
            android:textSize="25sp"
            app:backgroundTint="@null"
            android:tag="8"/>

        <Button
            android:id="@+id/btnNine"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/number_rounded_button"
            android:text="9"
            android:textColor="@color/numbers_button_text_color"
            android:textSize="25sp"
            app:backgroundTint="@null"
            android:tag="9"/>

        <ImageButton
            android:id="@+id/btnMultiplication"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/math_symbol_rounded_button"
            android:src="@drawable/ic_multiply"
            android:tag="x"/>

        <Button
            android:id="@+id/btnFour"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/number_rounded_button"
            android:text="4"
            android:textColor="@color/numbers_button_text_color"
            android:textSize="25sp"
            app:backgroundTint="@null"
            android:tag="4"/>

        <Button
            android:id="@+id/btnFive"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/number_rounded_button"
            android:text="5"
            android:textColor="@color/numbers_button_text_color"
            android:textSize="25sp"
            app:backgroundTint="@null"
            android:tag="5"/>

        <Button
            android:id="@+id/btnSix"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/number_rounded_button"
            android:text="6"
            android:textColor="@color/numbers_button_text_color"
            android:textSize="25sp"
            app:backgroundTint="@null"
            android:tag="6"/>

        <ImageButton
            android:id="@+id/btnSubtract"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/math_symbol_rounded_button"
            android:src="@drawable/ic_minus"
            android:tag="-"/>


        <Button
            android:id="@+id/btnOne"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/number_rounded_button"
            android:text="1"
            android:textColor="@color/numbers_button_text_color"
            android:textSize="25sp"
            app:backgroundTint="@null"
            android:tag="1"/>

        <Button
            android:id="@+id/btnTwo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/number_rounded_button"
            android:text="2"
            android:textColor="@color/numbers_button_text_color"
            android:textSize="25sp"
            app:backgroundTint="@null"
            android:tag="2"/>

        <Button
            android:id="@+id/btnThree"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/number_rounded_button"
            android:text="3"
            android:textColor="@color/numbers_button_text_color"
            android:textSize="25sp"
            app:backgroundTint="@null"
            android:tag="3"/>

        <ImageButton
            android:id="@+id/btnPlus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/math_symbol_rounded_button"
            android:src="@drawable/ic_plus"
            android:tag="+"/>

        <Button
            android:id="@+id/btnZero"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/number_rounded_button"
            android:text="0"
            android:textColor="@color/numbers_button_text_color"
            android:textSize="25sp"
            app:backgroundTint="@null"
            android:tag="0"/>

        <Button
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/number_rounded_button"
            android:text=","
            android:textColor="@color/numbers_button_text_color"
            android:textSize="25sp"
            app:backgroundTint="@null"
            android:tag=","/>

        <ImageButton
            android:id="@+id/btnDeleteCharacter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/number_rounded_button"
            android:onClick="deleteLastCharacter"
            android:src="@drawable/ic_backspace" />

        <ImageButton
            android:id="@+id/btnEqual"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:background="@drawable/equal_rounded_button"
            android:src="@drawable/ic_equal" />
    </GridLayout>
</LinearLayout>
